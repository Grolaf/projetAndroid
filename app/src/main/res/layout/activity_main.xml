<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background"
    android:orientation="vertical"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <View
            android:id="@+id/splash_first_line"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_white1" />

        <View
            android:id="@+id/splash_second_line"
            android:layout_width="20dp"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/splash_first_line"
            android:background="@drawable/ic_rose1" />

        <View
            android:id="@+id/splash_third_line"
            android:layout_width="20dp"
            android:layout_height="230dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/splash_second_line"
            android:background="@drawable/ic_white2" />

        <View
            android:id="@+id/splash_quatro_line"
            android:layout_width="20dp"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/splash_third_line"
            android:background="@drawable/ic_rose2" />

        <View
            android:id="@+id/splash_cinqo_line"
            android:layout_width="20dp"
            android:layout_height="190dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/splash_quatro_line"
            android:background="@drawable/ic_blue1" />

        <View
            android:id="@+id/splash_six_line"
            android:layout_width="20dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/splash_cinqo_line"
            android:background="@drawable/ic_white_end" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="0">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >


    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:src="@drawable/logosplash"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_weight="0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="0dp"
            android:text="@string/splash_down"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/main_text"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>